<?xml version="1.0" encoding="UTF-8"?>
<project name="Webtasks example" default="init">

	<description>Build PunBB</description>
	<import file="webtasks.xml"/>
	<property name="webtasks.dir" value="${basedir}" />


	<!-- SOURCE DIRS -->
	<property name="js-src" value="${basedir}/../../include/js" />
	<property name="css-src" value="${basedir}/../../style" />

	<target name="init" depends="webtasks.init, make-js, make-css">
		<echo>Build done.</echo>
	</target>


	<!-- BUILD  JS -->
	<target name="make-js">
		<compress-js-lib tofile="${js-src}/min/punbb.common.min.js" force="true">
			<filelist dir="${js-src}">
				<file name="LAB.src.js" />
				<file name="punbb.common.js" />
			</filelist>
		</compress-js-lib>

		<compress-js-lib tofile="${js-src}/min/detect_timezone.min.js" force="true">
			<filelist dir="${js-src}">
				<file name="detect_timezone.js" />
			</filelist>
		</compress-js-lib>

		<compress-js-lib tofile="${js-src}/min/punbb.install.min.js" force="true">
			<filelist dir="${js-src}">
				<file name="punbb.install.js" />
			</filelist>
		</compress-js-lib>

		<compress-js-lib tofile="${js-src}/min/punbb.mobile.min.js" force="true">
			<filelist dir="${js-src}">
				<file name="punbb.mobile.js" />
			</filelist>
		</compress-js-lib>
	</target>


	<!-- BUILD CSS -->
	<target name="make-css">
		<compress-css-lib tofile="${css-src}/Oxygen/min/Oxygen.min.css" force="true">
			<filelist dir="${css-src}">
				<file name="Oxygen/Oxygen.css" />
				<file name="Oxygen/Oxygen_mobile.css" />
				<file name="Oxygen/Oxygen_cs.css" />
			</filelist>
		</compress-css-lib>

		<compress-css-lib tofile="${css-src}/Oxygen/min/Oxygen_ie6.min.css" force="true">
			<filelist dir="${css-src}">
				<file name="Oxygen/Oxygen_ie6.css" />
			</filelist>
		</compress-css-lib>

		<compress-css-lib tofile="${css-src}/Oxygen/min/Oxygen_ie7.min.css" force="true">
			<filelist dir="${css-src}">
				<file name="Oxygen/Oxygen_ie7.css" />
			</filelist>
		</compress-css-lib>

		<compress-css-lib tofile="${css-src}/Oxygen/min/Oxygen_ie8.min.css" force="true">
			<filelist dir="${css-src}">
				<file name="Oxygen/Oxygen_ie8.css" />
			</filelist>
		</compress-css-lib>
	</target>

</project>
